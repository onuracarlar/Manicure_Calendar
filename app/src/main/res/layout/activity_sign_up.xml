<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pinkbackground"
        tools:context="com.android_examples.com.layoutbackgroundcolorxml.MainActivity"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="25dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="123dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="437dp"
            android:fontFamily="@font/bad_script"
            android:text="E-Mail:"
            android:textColor="#4F3755"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password2EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="344dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="214dp"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="424dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="126dp"
            android:fontFamily="@font/bad_script"
            android:onClick="signUpClicked"
            android:text="SIGN UP"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="260dp"
            android:fontFamily="@font/bad_script"
            android:text="Confirm Password:"
            android:textColor="#4F3755"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="168dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="390dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="306dp"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="352dp"
            android:fontFamily="@font/bad_script"
            android:text="Password:"
            android:textColor="#4F3755"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>